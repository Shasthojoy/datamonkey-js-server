<script language = "JavaScript" type="text/javascript">function setYLabel() // 	{	    var predef_labels = ["Posterior mean synonymous rate",	                         "Posterior mean non-synonymous rate",	                         "Posterior mean non-synonymous-synonymous rates]",	                         "Posterior Prob of positive selection",	                         "Posterior Prob of negative selection"];	                         		var selector = document.getElementById('yvariable');		var labeler  = document.getElementById('ylabel');		labeler.value = predef_labels[selector.selectedIndex];	}</script>		<div class = "RepClassSM">		Pick the quantity to plot: 			<SELECT id = "yvariable" name = "Y" onChange = "setYLabel()">				<OPTION VALUE = "1">&alpha;				<OPTION VALUE = "2">&beta;				<OPTION VALUE = "3">E[&beta;-&alpha;]				<OPTION VALUE = "4" SELECTED>Posterior Pr[&omega;&gt;1]				<OPTION VALUE = "5" SELECTED>Posterior Pr[&omega;&lt;1]			</SELECT>		</div>		<div class = "RepClassSM">		Output format: 			<SELECT name = "Format">				<OPTION VALUE = "png" SELECTED>PNG bitmap				<OPTION VALUE = "postscript">Postscript				<OPTION VALUE = "pdf">PDF			</SELECT>		</div>		<div class = "RepClassSM">		Plot Style: 			<SELECT name = "Style">				<OPTION VALUE = "steps">Steps				<OPTION VALUE = "impulses" SELECTED>Impulse				<OPTION VALUE = "lines">Line				<OPTION VALUE = "dots">Dots			</SELECT>					Plot Size (PNG ONLY): 			<SELECT name = "Size">				<OPTION VALUE = "size 640,480">Small				<OPTION VALUE = "size 1024,768" SELECTED>Medium				<OPTION VALUE = "size 1600,1200">Large			</SELECT>		</div>		<div class = "RepClassSM">		X Axis Label : <input name = "xaxis" value = "Codon"> &nbsp; Y Axis Label : <input id = 'ylabel' name = "yaxis" value = "Posterior Prob of positive selection">		</div>		<div class = "RepClassSM">			Click to <INPUT TYPE="Submit" VALUE="Plot"> the results (opens a new window).		</div>